<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.victoriakalembka.spotter.MainActivity">

    <Button
        android:text="Take A Photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spotter"
        android:layout_marginTop="55dp"
        android:id="@+id/spotter_take"
        android:layout_alignStart="@+id/spotter"
        android:layout_alignEnd="@+id/spotter" />

    <Button
        android:text="View Photo Database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/spotter_view"
        android:layout_below="@+id/spotter_take"
        android:layout_alignStart="@+id/spotter_take"
        android:layout_alignEnd="@+id/spotter_take" />

    <Button
        android:text="Edit Text Database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/spotter_edit"
        android:layout_below="@+id/spotter_view"
        android:layout_alignStart="@+id/spotter_view"
        android:layout_alignEnd="@+id/spotter_view" />

    <Button
        android:text="Credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spotter_edit"
        android:layout_marginTop="10dp"
        android:id="@+id/spotter_credits"
        android:layout_alignStart="@+id/spotter_edit"
        android:layout_alignEnd="@+id/spotter_edit" />

    <TextView
        android:text="SpÃ¶tter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/spotter"
        android:typeface="serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
